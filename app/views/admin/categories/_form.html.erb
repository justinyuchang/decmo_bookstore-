<div class="container">
<% @category.errors.any? %>
<% @category.errors.full_messages.each do |msg| %>
<%= msg %>
<% end %>
  <%= form_for([:admin, @category]) do |f| %>
  <div class="columns">
    <div class="column is-4">
      <div class="field">
        <%= f.label :name, class:'label' %>
        <div class="control">
          <%= f.text_field :name, class:'input' %>
        </div>
      </div>
    </div>
  </div>
  <div class="columns">
    <div class="column">
      <%= f.submit class:'button is-light'%>
    </div>
  </div>
  <% end %>
</div>