<%= link_to 'Add', new_admin_category_path, class: 'button is-dark' %>
<hr>
<h1 class="title is-3 has-text-grey-light" > Categories </h1>

<table class="table is-hoverable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Function</th>
      <th>Function</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category|%>
    <tr>
      <td>
        <%= link_to category.name, admin_category_path(category)  %>
      </td>
      <td>
        <%= link_to 'Edit', edit_admin_category_path(category) %>
      </td>
      <td>
        <%= link_to 'Delete', admin_category_path(category), method:'delete', data:{confirm:'Sure?'}  %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
